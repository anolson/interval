<% @primary_heading = link_to content_tag(:h1, "Articles"), :action => "index" %>
<% @secondary_heading = content_tag :span, "Listing all articles (#{@articles.length})", :class => "larger" %>

<% @secondary_links = [
  { :text => 'Add Article', :options => {:controller => 'admin/articles', :action => 'new' } } ] %>


<div id="main"> 
  <div class="list">   
    <% rounded_box nil, "complete", "full" do %> 
    <div class="container full"> 
    <table border="0" cellspacing="0" cellpadding="5">
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Body</th>
        <th colspan="2">Created</th>
      </tr>
      <%= render :partial => 'article', :collection => @articles %>
    </table>
    </div>
    <% end %>
  </div>
</div>

