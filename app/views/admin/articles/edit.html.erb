<% @primary_heading= link_to content_tag(:h1, "Articles"), :action => "index" %>

<div id="main">
  <% rounded_box nil, "complete", "half" do %>
    <% container "full" do %>
      <% form_for([:admin, @article]) do |f| %>
        <%= f.error_messages %>
        <fieldset>
          <legend>Edit Article</legend>
          <label for="title">Title:</label><br/>
          <%= f.text_field :title%><br/><br/>

          <label for="title">Permalink:</label><br/>
          <%= f.text_field :permalink%><br/><br/>

          <label for="body">Body:</label><br/>
          <%= f.text_area :body %><br/><br/>
          
          <label for="category">Category:</label><br/>
          <%= f.select :category, Article::CATEGORIES %><br/><br/>
          
        </fieldset>
        
        <p>
          <%= f.submit "Update" %>
        </p>
      <% end %>      
    <% end %>

  <% end %>
  <%= link_to 'Show', admin_article_path %> |
  <%= link_to 'Back', admin_articles_path %>
</div>