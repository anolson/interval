<% @heading = content_tag :span, "Training summary.", :class => "larger" %>

<div id="main">
  <%= render(:partial => 'common/secondary') %>
  <div class="summary">
    <% rounded_box "Weekly", "half", "full" do %>
      <% container "full" do %>
        <%= render :partial => 'weekly' %>
      <% end %>
    <% end %>

    <% rounded_box "Monthly", "half", "full" do %>
      <% container "full" do %>
        <%= render :partial => 'monthly' %>
      <% end %>
    <% end %>
  </div>  
</div>
